{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2020",
        "outDir": "out",
        "lib": [
            "ES2020"
        ],
        "sourceMap": true,
        "strict": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "types": [
            "vitest/globals"
        ]
    },
    "include": [
        "src/**/*",
        "shared/**/*"
    ],
    "exclude": [
        "node_modules",
        ".vscode-test",
        "verify_soap.ts",
        "vitest.config.ts",
        "playwright.config.ts",
        "e2e"
    ]
}