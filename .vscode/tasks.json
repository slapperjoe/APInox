{
    "version": "2.0.0",
    "inputs": [
        {
            "id": "commitMessage",
            "type": "promptString",
            "description": "Enter Changelog Message (Paste from 'Generate Commit Message' if desired)"
        }
    ],
    "tasks": [
        {
            "type": "npm",
            "script": "compile",
            "problemMatcher": "$tsc",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "label": "npm: compile",
            "detail": "compile extension"
        },
        {
            "type": "npm",
            "script": "watch",
            "problemMatcher": "$tsc-watch",
            "isBackground": true,
            "presentation": {
                "reveal": "never"
            },
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "Version Bump Major",
            "type": "shell",
            "command": "npm run version-bump-major -- \"${input:commitMessage}\"",
            "problemMatcher": []
        },
        {
            "label": "Version Bump Minor",
            "type": "shell",
            "command": "npm run version-bump-minor -- \"${input:commitMessage}\"",
            "problemMatcher": []
        },
        {
            "label": "Version Bump Patch",
            "type": "shell",
            "command": "npm run version-bump-patch -- \"${input:commitMessage}\"",
            "problemMatcher": []
        },
        {
            "label": "Package Extension",
            "type": "shell",
            "command": "npx vsce package",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "Test: Extension",
            "type": "shell",
            "command": "npx vitest run",
            "problemMatcher": [],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "Test: Extension (Watch)",
            "type": "shell",
            "command": "npx vitest",
            "problemMatcher": [],
            "isBackground": true
        },
        {
            "label": "Test: Webview",
            "type": "shell",
            "command": "npm test",
            "options": {
                "cwd": "${workspaceFolder}/webview"
            },
            "problemMatcher": [],
            "group": "test"
        },
        {
            "label": "Test: All",
            "dependsOn": [
                "Test: Extension",
                "Test: Webview"
            ],
            "problemMatcher": [],
            "group": "test"
        }
    ]
}