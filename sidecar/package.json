{
  "name": "apinox-sidecar",
  "version": "0.13.0",
  "description": "APInox Node.js sidecar for Tauri desktop application",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "bundle": "npm run build && esbuild dist/sidecar/src/index.js --bundle --platform=node --outfile=bundle.js --external:node:* --external:fsevents --external:jsonc-parser --packages=bundle",
    "dev": "ts-node src/index.ts"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "jsonc-parser": "^3.3.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "esbuild": "^0.27.2",
    "pkg": "^5.8.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.0"
  }
}
