{
    "name": "apinox-sidecar",
    "version": "0.9.0",
    "description": "APInox Node.js sidecar for Tauri desktop application",
    "main": "dist/index.js",
    "scripts": {
        "build": "tsc",
        "dev": "ts-node src/index.ts",
        "bundle": "npm run build && pkg dist/index.js --targets node18-macos-x64,node18-win-x64,node18-linux-x64 --out-path ../src-tauri/binaries"
    },
    "dependencies": {
        "express": "^4.18.2",
        "cors": "^2.8.5"
    },
    "devDependencies": {
        "@types/express": "^4.17.21",
        "@types/cors": "^2.8.17",
        "@types/node": "^20.10.0",
        "typescript": "^5.3.0",
        "ts-node": "^10.9.2",
        "pkg": "^5.8.1"
    }
}