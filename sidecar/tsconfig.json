{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "lib": [
            "ES2020"
        ],
        "outDir": "./dist",
        "rootDir": "..",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "declaration": false,
        "sourceMap": true,
        "composite": false
    },
    "include": [
        "src/**/*",
        "../src/**/*",
        "../shared/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "../node_modules",
        "../src/**/*.test.ts",
        "../src/__tests__/**/*",
        "../src/cli/**/*",
        "../src/commands/**/*",
        "../src/controllers/**/*",
        "../src/panels/**/*",
        "../src/adapters/**/*",
        "../src/utils/AttachmentUtil.ts",
        "../webview/**/*"
    ]
}